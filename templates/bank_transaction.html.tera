<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Transactions</title>
    <!-- Include necessary CSS and JS libraries here -->
</head>
<body>
    <div class="scroll-container">
        <div class="container-without-border">
            <div class="container-without-border-horizontally-header">
                <h1>Transactions</h1>
                <p id="success" class="success"></p>
                <p id="error" class="error"></p> 
            </div> 
            <div class="container-without-border-horizontally-header">
                <button id="remove-transaction" style="width: auto">Remove transaction from contract</button>
                <button id="hide-transaction" style="width: auto">Hide transaction</button>
                <button style="width: auto">Show hidden transactions</button>
            </div>

            <!-- Static header and table structure -->
            <div class="container-without-border-horizontally">
                <label for="date-range">Select date range:</label>
                <input type="text" id="date-range" class="flatpickr">
                <label for="contract-filter">Filter by Contract:</label>
                <select style="max-width: 300px" id="contract-filter">
                    <option value="">All Contracts</option>
                    <!-- Options will be dynamically populated by JS -->
                </select>
                <label>
                    <input type="checkbox" id="no-contract-filter"> Show only transactions without contracts
                </label>
                <input style="width: auto; height: 15px" type="text" id="transaction-search" placeholder="Search transactions...">
            </div>

            <table class="transaction-table">
                <thead>
                    <tr>
                        <th>Row</th>
                        <th data-key="counterparty" class="sortable">Counterparty <span>↑</span></th>
                        <th data-key="amount" class="sortable">Amount <span>↑</span></th>
                        <th data-key="bank_balance_after" class="sortable">Bank Balance After <span>↑</span></th>
                        <th data-key="date" class="sortable">Date <span>↑</span></th>
                    </tr>
                </thead>
                <tbody id="transaction-table-body">
                    <!-- Transactions will be dynamically inserted here -->
                </tbody>
            </table>
        </div>
    </div>

    <!-- JSON data for transactions -->
    <script id="transactions-data" type="application/json">
        {{ transactions | safe }}
    </script>
</body>
</html>
