<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Rust Financial Manager</title>
        <link rel="stylesheet" href="/static/styles.css">
        <script src="https://cdn.plot.ly/plotly-latest.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    </head>
    <body>
        <div class="full-page-container">
            <div class="sidebar-left">
                <h2>Rust Financial Manager</h2>
                <button onclick="loadContent('/dashboard')">Dashboard</button>
                <button onclick="loadContent('/contract')">Contracts</button>
                <button onclick="loadContent('/add-bank')">Add new bank</button>
                <div id="banks">
                    {% for bank in banks %}
                        <div class="bank-button-container" data-bank-id="{{ bank.id }}">
                            <button class="bank-button" onclick="loadContent('/bank/{{ bank.id }}')" style="width: 100%">
                                {{ bank.name }}
                            </button>
                        <div class="bank-sub-buttons" style="display: none;">
                            <button style="width: 100%" onclick="loadContent('/bank/{{ bank.id }}/contract')">Contracts</button>
                            <button style="width: 100%" onclick="loadContent('/bank/{{ bank.id }}/transaction')">Transactions</button>
                        </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="main-content" id="main-content">
                <p>Loading...</p>
            </div>
            <div class="sidebar-right">
                <button onclick="loadContent('/settings')">Settings</button>
                <form id="logout-form" action="/logout" method="post">
                    <button type="submit">Logout</button>
                </form>
            </div>
        </div>
        <!-- Include JavaScript modules -->
        <script type="module" src="/static/main/main.js"></script>
    </body>
</html>
